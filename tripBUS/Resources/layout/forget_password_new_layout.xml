<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:textSize="31sp"
        android:textColor="#414042"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <EditText
                 android:inputType="textPassword"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" 
                 android:hint="Password"
                 android:textSize="21sp"
                 android:imeOptions="actionNext"
                 android:theme="@style/EditTextMy"
                 android:layout_margin="20dp"
                 android:id="@+id/et_password_new_forget"/>

     </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <EditText
                 android:inputType="textPassword"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" 
                 android:hint="Password Confirm"
                 android:textSize="21sp"
                 android:imeOptions="actionNext"
                 android:theme="@style/EditTextMy"
                 android:layout_margin="20dp"
                 android:id="@+id/et_password_CofirmPassword_forget"/>

     </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="set new password"
        android:textSize="26sp"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:background="@drawable/button2_style"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:id="@+id/btn_new_forget"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"/>
</LinearLayout>
